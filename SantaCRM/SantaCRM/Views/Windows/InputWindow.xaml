<Window x:Class="SantaCRM.Views.Windows.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SantaCRM.Views.Windows"
        mc:Ignorable="d"
        Title="InputWindow" Height="130" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Topmost="True">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите название"/>
            <TextBox Text="{Binding Name}" Margin="0,10,0,0"/>
            <UniformGrid Margin="0, 20">
                <Button Command="{Binding OkCommand}" Content="Ок"/>
                <Button Command="{Binding ExitCommand}" Content="Отмена"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>
